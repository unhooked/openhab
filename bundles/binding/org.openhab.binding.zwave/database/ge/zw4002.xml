        <Parameter>
            <Index>4</Index>
            <Label lang="en">Invert Switch</Label>
            <Type>list</Type>
            <Default>0</Default>
            <Minimum>0</Minimum>
            <Maximum>255</Maximum>
            <Size>1</Size>
            <Item>
                <Value>0</Value>
                <Label lang="en">No</Label>
            </Item>
            <Item>
                <Value>1</Value>
                <Label lang="en">Yes</Label>
            </Item>
