<Product>
    <Model>ZW4002</Model>
    <Label lang="en">In-Wall Smart Fan Control</Label>

    <CommandClasses>
        <Class>
            <id>0x72</id>             <!-- MANUFACTURER_SPECIFIC -->
        </Class>
        <Class>
            <id>0x70</id>             <!-- CONFIGURATION -->
        </Class>
        <Class>
            <id>0x20</id>             <!-- BASIC -->
        </Class>
        <Class>
            <id>0x00</id>             <!-- NO_OPERATION -->
        </Class>
        <Class>
            <id>0x27</id>             <!-- SWITCH_ALL -->
